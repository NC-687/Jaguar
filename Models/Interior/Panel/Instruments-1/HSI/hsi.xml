<PropertyList>

    <path>hsi.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>hdgring</object-name>
        <property>orientation/heading-magnetic-deg</property>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>orientation/heading-magnetic-deg</property>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/nav[0]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/nav[0]/heading-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.013</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.013</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>HSI.gsneedle</object-name>
        <property>instrumentation/nav[0]/gs-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.01</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.01</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ADF.needle</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

	<animation>
		<type>rotate</type>
		<object-name>HSI.knob</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<axis>
			<x1-m>0.0062</x1-m>
			<y1-m>-0.02107</y1-m>
			<z1-m>-0.02266</z1-m>
			<x2-m>-0.0062</x2-m>
			<y2-m>-0.02107</y2-m>
			<z2-m>-0.02266</z2-m>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>HSI.knob</object-name>
		<action>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR1 Radial: %d", 1 * getprop("instrumentation/nav[0]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>HSI.knob</object-name>
		<action>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR1 Radial: %d", 1 * getprop("instrumentation/nav[0]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
	</animation>

  <animation>
    <type>material</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <object-name>hdgring</object-name>
        <object-name>HSI.face</object-name>
        <object-name>HSI.gsneedle</object-name>
    <object-name>ADF.needle</object-name>
    <emission>
      <red>   0.9 </red>
      <green> 0.9 </green>
      <blue>  0.9 </blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>    

</PropertyList>