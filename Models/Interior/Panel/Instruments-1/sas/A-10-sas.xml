<?xml version="1.0"?>


<PropertyList>

	<path>A-10-sas.ac</path>
	
	<!-- Yaw SAS switch -->
	<animation>
		<object-name>yaw-L-switch</object-name>
		<type>rotate</type>
		<property>fdm/jsbsim/sas/yaw-l</property>
		<factor>60</factor>
		<center>
			<x-m>-0.0213</x-m>
			<y-m>0.0178</y-m>
			<z-m>0.0000</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>yaw-L-switch</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>fdm/jsbsim/sas/yaw-l</property>
			</binding>
		</action>
	</animation>

